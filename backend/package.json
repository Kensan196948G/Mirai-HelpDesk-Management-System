{
  "name": "@mirai-helpdesk/backend",
  "version": "0.1.0",
  "description": "Backend API for Mirai HelpDesk Management System",
  "private": true,
  "type": "commonjs",
  "main": "src/server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:api-integration": "NODE_ENV=test jest --testPathPattern=tests/integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "db:backup": "node scripts/backup-db.js",
    "clean": "rm -rf node_modules coverage .nyc_output"
  },
  "keywords": [
    "helpdesk",
    "api",
    "backend",
    "express",
    "sqlite"
  ],
  "author": "Mirai IT Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.21.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.7",
    "better-sqlite3": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^10.0.0",
    "date-fns": "^4.1.0",
    "express-validator": "^7.2.0",
    "express-rate-limit": "^7.4.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 50,
        "functions": 60,
        "lines": 60
      }
    }
  }
}
