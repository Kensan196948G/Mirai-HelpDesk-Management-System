# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mirai_helpdesk
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Microsoft Graph API (Non-interactive authentication)
# Azure AD App Registration で取得
MS_TENANT_ID=your-tenant-id-here
MS_CLIENT_ID=your-client-id-here
MS_CLIENT_SECRET=your-client-secret-here
MS_AUTHORITY=https://login.microsoftonline.com/{your-tenant-id}
MS_GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0
MS_SCOPES=https://graph.microsoft.com/.default

# Email Configuration (通知システム)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=helpdesk@yourcompany.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=Mirai ヘルプデスク <helpdesk@yourcompany.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.zip,.txt,.log

# SLA Configuration (minutes)
SLA_P1_RESPONSE=15
SLA_P1_RESOLVE=120
SLA_P2_RESPONSE=60
SLA_P2_RESOLVE=480
SLA_P3_RESPONSE=240
SLA_P3_RESOLVE=4320
SLA_P4_RESPONSE=1440
SLA_P4_RESOLVE=7200

# Auto-close timeout (days)
AUTO_CLOSE_DAYS=3

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PII Masking Configuration
# 個人識別情報（PII）のマスキング機能制御
ENABLE_PII_MASKING=true
MASK_EMAIL=true
MASK_IP=true
MASK_PHONE=true
MASK_TOKEN=true

# AI機能設定（Claude API）
# Anthropic API Key（https://console.anthropic.com/ で取得）
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here
CLAUDE_API_VERSION=2023-06-01
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=8192
CLAUDE_TEMPERATURE=0.3

# AI機能制御
AI_ENABLED=true
AI_RATE_LIMIT_PER_USER=10
AI_CACHE_TTL=3600

# Redis設定（AI機能のキャッシュ・レート制限用）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
