# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mirai_helpdesk
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Microsoft 365 Configuration (非対話型認証)
# Azure AD App Registration で取得
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# Microsoft Graph API
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
GRAPH_API_SCOPE=https://graph.microsoft.com/.default

# Email Configuration (通知システム)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=helpdesk@yourcompany.com
SMTP_PASSWORD=your_smtp_password_here
EMAIL_FROM=Mirai ヘルプデスク <helpdesk@yourcompany.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.zip,.txt,.log

# SLA Configuration (minutes)
SLA_P1_RESPONSE=15
SLA_P1_RESOLVE=120
SLA_P2_RESPONSE=60
SLA_P2_RESOLVE=480
SLA_P3_RESPONSE=240
SLA_P3_RESOLVE=4320
SLA_P4_RESPONSE=1440
SLA_P4_RESOLVE=7200

# Auto-close timeout (days)
AUTO_CLOSE_DAYS=3

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
