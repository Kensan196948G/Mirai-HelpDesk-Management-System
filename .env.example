# ===================================
# Mirai HelpDesk Management System
# Environment Variables Template
# ===================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ----- Server -----
NODE_ENV=development
PORT=3000
HOST=localhost

# ----- Database -----
# SQLite (development)
DATABASE_PATH=./data/helpdesk.db

# PostgreSQL (production) - uncomment when needed
# DATABASE_URL=postgresql://user:password@localhost:5432/helpdesk

# ----- Authentication -----
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ----- Microsoft 365 / Azure AD (Phase 2) -----
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# ----- Microsoft Graph API (Phase 2) -----
# GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0

# ----- Email Notifications (Phase 2) -----
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASS=your-smtp-password

# ----- File Upload -----
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg,.gif,.txt,.log,.zip

# ----- Logging -----
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# ----- Security -----
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----- SLA Defaults (minutes) -----
SLA_P1_RESPONSE=15
SLA_P1_RESOLUTION=120
SLA_P2_RESPONSE=60
SLA_P2_RESOLUTION=480
SLA_P3_RESPONSE=240
SLA_P3_RESOLUTION=4320
SLA_P4_RESPONSE=1440
SLA_P4_RESOLUTION=7200
