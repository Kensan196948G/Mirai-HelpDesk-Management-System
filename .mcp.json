{
  "mcpServers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "description": "GitHub統合 - リポジトリ管理、Issue追跡"
    },
    "memory": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-memory@latest"],
      "env": {},
      "description": "メモリサーバー - セッション間の情報保持"
    },
    "playwright": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@playwright/mcp@latest"],
      "env": {},
      "description": "ブラウザ自動化 - E2Eテスト、スクレイピング"
    },
    "sqlite": {
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sqlite@latest"],
      "env": {},
      "description": "SQLiteデータベース - 開発・テスト用データストア"
    }
  }
}
